# Config file for the INSTALLED package
# Allow other CMake projects to find this package if it is installed

libdir=@CMAKE_INSTALL_PREFIX@/@LIBDIR@
includedir=@CMAKE_INSTALL_PREFIX@/@INCLUDEDIR@

Name: lib@CMAKE_PROJECT_NAME@
Description: @PROJECT_DESCRIPTION@
URL: @PROJECT_URL@
Version: @PROJECT_VERSION@
Libs: -L${libdir} -ldcdfort
Cflags: -I${includedir}
